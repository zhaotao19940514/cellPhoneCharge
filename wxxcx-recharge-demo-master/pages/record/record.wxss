.record-header {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #29b228;
  height: 200rpx;
  color: #fff;
}

.record-header-content {
  display: flex;
  width: 80%;
}

.record-header-text {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx 0;
  border: 1px solid #fff;
}

.tab-active {
  background: #fff;
  color: #1a1a1a;
}

.record-footer {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #ccc;
  z-index: 10;
}

.record-footer-item {
  flex: 1;
  display: flex;
  justify-content: center;
  font-size: 36rpx;
}

.record-footer-item image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

.order-title {
  padding: 20rpx;
  background: #ccc;
  font-size: 36rpx;
}

.order-item-info {
  display: flex;
  padding: 10rpx 0;
}
.order-list{
  padding-bottom: 150rpx;
}
.order-news-icon{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.order-none{
  display: flex;
  align-items: center;
  background: #29b228;
  padding: 20rpx;
  color: #fff;
  font-size: 32rpx;
}
.order-list-item {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}

.order-item-alpha {
  display: flex;
  flex-direction: column;
  padding: 0 0 10rpx; 
}
.order-item-time{
  color: #ccc;
  font-size: 26rpx;
}

.order-item-beta {
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 26rpx;
}

.order-item-text {
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.order-result-btn{
  background: #29b228;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius:8rpx; 
}
.order-item-number{
  display: flex;
  align-items: center;
}
.order-item-icon{
  width: 60rpx;
  height: 60rpx;
  padding: 0 30rpx;
  margin-left: 10rpx;
}